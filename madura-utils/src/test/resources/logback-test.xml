<configuration scan="true">
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
	<encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
		<pattern>%-35(%d{HH:mm:ss.SSS} [%thread]) %-5level %logger{35} - %F:%L %msg%n</pattern>
	</encoder>
	</appender>
	    
	<logger name="nz.co.senanque.schemaparser" level="OFF"/>
	<logger name="nz.co.senanque.parser" level="OFF"/>
	<logger name="nz.co.senanque.locking.sql.SQLLockFactory" level="OFF"/>

  <root level="OFF">
    <appender-ref ref="STDOUT" />
  </root>
</configuration>

